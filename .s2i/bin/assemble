#!/bin/bash

yum -y install wget && \
        wget https://www.rabbitmq.com/releases/erlang/erlang-17.4-1.el6.x86_64.rpm && \
        rpm -ivh erlang-17.4-1.el6.x86_64.rpm && \
        wget https://www.rabbitmq.com/releases/rabbitmq-server/v3.5.4/rabbitmq-server-3.5.4-1.noarch.rpm && \
        rpm --import https://www.rabbitmq.com/rabbitmq-signing-key-public.asc && \
        yum -y install rabbitmq-server-3.5.4-1.noarch.rpm && \
        systemctl disable firewalld && \
        echo "[{rabbit, [{loopback_users, []}]}]." >> /etc/rabbitmq/rabbitmq.config && \
        chkconfig rabbitmq-server on

